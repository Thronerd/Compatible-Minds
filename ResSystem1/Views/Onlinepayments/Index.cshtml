@model IEnumerable<Models.OnlinePayment>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.cardType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cardholderName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cardNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ccvno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.expiryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.amount)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.cardType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cardholderName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cardNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ccvno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.expiryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.amount)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.RefNo }) |
                @Html.ActionLink("Details", "Details", new { id=item.RefNo }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.RefNo })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
